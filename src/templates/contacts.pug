                        span(itemprop="postalCode") 614016

                div.col-md-3(itemprop="telephone") 
                    a(href="tel:+79223104870") +7 (922) 310-48-70

                div.col-md-3(itemprop="email") 
                    a(href="mailto:zakaz@vl-taxi.ru") zakaz@vl-taxi.ru

                div.col-md-3
                    a.social.social--vk(href="#")
                    a.social.social--fb(href="#")
